@model List<AkademiQMongoDb.DTOs.AboutDtos.ResultAboutDto>

@foreach (var item in Model)
{
    <!-- Start About 
    ============================================= -->
    <div class="about-style-one-area default-padding">
        <div class="container">
            <div class="row align-center">
                <div class="col-lg-6">
                    <div class="about-style-one-thumb">
                        <img src="@item.ImageUrl1" alt="Image Not Found">
                        <div class="fun-fact">
                            <div class="counter">
                                <div class="timer" data-to="50" data-speed="2000">50</div>
                                <div class="operator">+</div>
                            </div>
                            <span class="medium">Yıllık Deneyim</span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="about-style-one-info">
                        <h4 class="sub-title">@item.Title1</h4>
                        <h2 class="title">@item.Title2</h2>
                        <p>
                           @item.Description1
                           <!-- Assuming Description is split or we have another field. Used Description for both Title 2 and p for now. -->
                        </p>
                        <ul class="list-item">
                            <li>Taze ve Doğal Ürünler</li>
                            <li>Profesyonel Şefler</li>
                            <li>Hızlı Servis</li>
                        </ul>
                        <a class="btn btn-theme btn-md animation" href="/About/Index">Daha Fazla</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End About -->
}
