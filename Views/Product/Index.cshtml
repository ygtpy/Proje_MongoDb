@using AkademiQMongoDb.DTOs.ProductDtos
@model List<ResultProductDto>
@{
    ViewData["Title"] = "Menü";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<!-- Start Breadcrumb 
============================================= -->
<div class="breadcrumb-area bg-cover shadow dark text-center text-light" style="background-image: url(/source/assets/img/shape/2.jpg);">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <h1>Menümüz</h1>
                <ul class="breadcrumb">
                    <li><a href="/Default/Index">Ana Sayfa</a></li>
                    <li>Menü</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- End Breadcrumb -->

<!-- Start Menu 
============================================= -->
<div class="food-menu-area default-padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <div class="site-heading text-center">
                    <h4 class="sub-title">Lezzetlerimiz</h4>
                    <h2 class="title">Sizin İçin Seçtiklerimiz</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @if (Model != null && Model.Count > 0)
            {
                <div class="food-menu-items">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-6 col-md-6 single-item wow fadeInUp" data-wow-delay="300ms">
                            <div class="item">
                                <div class="thumb">
                                    <img src="@item.ImageUrl" alt="@item.Name" style="width: 100px; height: 100px; object-fit: cover; border-radius: 50%;">
                                    <div class="price">
                                        <h5>@item.Price.ToString("C")</h5>
                                    </div>
                                </div>
                                <div class="info">
                                    <h4><a href="#">@item.Name</a></h4>
                                    <span>@item.CategoryName</span>
                                    <p>
                                        @item.Description
                                    </p>
                                    <div class="button">
                                        <a href="/Basket/AddToBasket?productId=@item.Id" class="btn btn-theme btn-sm effect btn-circle">
                                            <i class="fas fa-shopping-cart"></i> Sepete Ekle
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                 <div class="col-lg-12 text-center">
                    <div class="alert alert-warning" role="alert">
                        Henüz menüye ürün eklenmemiş.
                    </div>
                 </div>
            }
        </div>
    </div>
</div>
<!-- End Menu -->
