@using AkademiQMongoDb.DTOs.AdminDtos
@model LoginAdminDto

@{
    Layout = null;
}

<!DOCTYPE html>

<html class="light" lang="en">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Admin Giriş | Lezzet Mutfağı</title>
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap" rel="stylesheet" />
    <script id="tailwind-config">
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#137fec",
                        "background-light": "#f6f7f8",
                        "background-dark": "#101922",
                    },
                    fontFamily: {
                        "display": ["Inter", "sans-serif"]
                    },
                    borderRadius: {
                        "DEFAULT": "0.25rem",
                        "lg": "0.5rem",
                        "xl": "0.75rem",
                        "full": "9999px"
                    },
                },
            },
        }
    </script>
    <style>
        .floating-label-group:focus-within label,
        .floating-label-group input:not(:placeholder-shown) + label {
            transform: translateY(-1.5rem) scale(0.85);
            color: #137fec;
            background: white;
            padding: 0 4px;
        }

        .dark .floating-label-group:focus-within label,
        .dark .floating-label-group input:not(:placeholder-shown) + label {
            background: #101922;
        }
    </style>
</head>
<body class="font-display bg-background-light dark:bg-background-dark text-[#111418] dark:text-white transition-colors duration-300">
    <div class="flex min-h-screen">
        <!-- Left Side: Vibrant Branding Area -->
        <div class="hidden lg:flex lg:w-1/2 relative flex-col justify-center items-center p-12 overflow-hidden bg-primary">
            <!-- Decorative Gradients -->
            <div class="absolute inset-0 opacity-40">
                <div class="absolute top-[-10%] left-[-10%] w-[50%] h-[50%] rounded-full bg-white/20 blur-[100px]"></div>
                <div class="absolute bottom-[-10%] right-[-10%] w-[50%] h-[50%] rounded-full bg-black/10 blur-[100px]"></div>
            </div>
            <div class="relative z-10 max-w-lg text-white">
                <div class="mb-8 flex items-center gap-3">
                    <div class="bg-white p-2 rounded-xl text-primary">
                        <span class="material-symbols-outlined text-3xl">restaurant</span>
                    </div>
                    <span class="text-2xl font-bold tracking-tight">Lezzet Mutfağı</span>
                </div>
                <h1 class="text-5xl font-black leading-[1.1] mb-6 tracking-tight">
                    Admin giriş sayfasına hoş geldiniz
                </h1>
                <p class="text-lg text-white/80 leading-relaxed mb-10">
                    Web sitenizin bütün özelliklerine erişebilmek için admin paneline giriş yapın.
                </p>
                <div class="rounded-2xl overflow-hidden shadow-2xl bg-white/10 backdrop-blur-sm border border-white/20">
                    <img alt="Dashboard Preview" class="w-full h-auto opacity-90" src="https://lh3.googleusercontent.com/aida-public/AB6AXuA36WGPiMBixTjOyJ_WkIFm56HjBV8Uu1q1MG-LJ4pGrdD6ntSK3Bks_lcl-nQpac293TG4KvtmZe-W_3c3jnebnXPyOmFWhiSi2jNdNsP0g2Fg3cmMcsq39zu2U8lmdWoyQzY5RrIqFTr3maAWSMvic9WOflmNqPPwUqrBu9cNh8UeCOCJBxiKom1O7bcmif2pNPBw5SGmeLBGXH1_HpTJVpKQ1U5m6uKUkJdIzosT0RWmhzlYYILX8C0fmlz8W3zDJKdmN2800FY" />
                </div>
            </div>
        </div>

        <!-- Right Side: Login Form -->
        <div class="w-full lg:w-1/2 flex flex-col justify-center items-center p-6 sm:p-12 bg-white dark:bg-background-dark">
            <div class="w-full max-w-md">
                <!-- Mobile Logo -->
                <div class="lg:hidden flex items-center gap-2 mb-8 justify-center">
                    <div class="bg-primary p-1.5 rounded-lg text-white">
                        <span class="material-symbols-outlined text-2xl">restaurant</span>
                    </div>
                    <span class="text-xl font-bold">Lezzet Mutfağı</span>
                </div>

                <div class="mb-8">
                    <h2 class="text-3xl font-extrabold mb-2">Giriş yap</h2>
                    <p class="text-[#617589] dark:text-gray-400">Bilgileriniz ile giriş yapın</p>
                </div>

                <form method="post" asp-action="Index" asp-controller="Login" class="space-y-5">
                    <!-- Validation Summary -->
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg p-4">
                            <div asp-validation-summary="All" class="text-red-600 dark:text-red-400 text-sm"></div>
                        </div>
                    }

                    <!-- Username -->
                    <div class="relative floating-label-group">
                        <input asp-for="UserName" class="peer block w-full px-4 pt-6 pb-2 text-base bg-white dark:bg-background-dark border border-[#dbe0e6] dark:border-gray-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all" id="username" placeholder=" " type="text" required />
                        <label class="absolute left-4 top-4 text-[#617589] dark:text-gray-400 transition-all pointer-events-none origin-left" for="username">
                            Kullanıcı Adı
                        </label>
                        <span asp-validation-for="UserName" class="text-red-500 text-xs mt-1 block"></span>
                    </div>

                    <!-- Password -->
                    <div class="relative floating-label-group">
                        <input asp-for="Password" class="peer block w-full px-4 pt-6 pb-2 text-base bg-white dark:bg-background-dark border border-[#dbe0e6] dark:border-gray-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all" id="password" placeholder=" " type="password" required />
                        <label class="absolute left-4 top-4 text-[#617589] dark:text-gray-400 transition-all pointer-events-none origin-left" for="password">
                            Şifre
                        </label>
                        <button class="absolute right-4 top-4 text-[#617589] hover:text-primary" type="button" onclick="togglePassword()">
                            <span class="material-symbols-outlined text-xl" id="toggleIcon">visibility</span>
                        </button>
                        <span asp-validation-for="Password" class="text-red-500 text-xs mt-1 block"></span>
                    </div>

                    <!-- Remember Me & Forgot Password -->
                    <div class="flex items-center justify-between">
                        <label class="flex items-center gap-2 cursor-pointer">
                            <input type="checkbox" class="size-4 rounded border-gray-300 text-primary focus:ring-primary" />
                            <span class="text-sm text-[#617589] dark:text-gray-400">Beni hatırla</span>
                        </label>
                        <a href="#" class="text-sm text-primary hover:underline font-medium">Şifremi unuttum</a>
                    </div>

                    <!-- Login Button -->
                    <button type="submit" class="w-full bg-primary hover:bg-primary/90 text-white font-bold py-4 px-6 rounded-lg transition-all duration-200 transform active:scale-[0.98] shadow-lg shadow-primary/25">
                        Giriş Yap
                    </button>
                </form>

                <script>
                    function togglePassword() {
                        const passwordInput = document.getElementById('password');
                        const toggleIcon = document.getElementById('toggleIcon');

                        if (passwordInput.type === 'password') {
                            passwordInput.type = 'text';
                            toggleIcon.textContent = 'visibility_off';
                        } else {
                            passwordInput.type = 'password';
                            toggleIcon.textContent = 'visibility';
                        }
                    }
                </script>

                <div class="mt-10 text-center">
                    <p class="text-[#617589] dark:text-gray-400">
                        Henüz bir hesabınız yok mu?
                        <a class="text-primary hover:underline font-bold ml-1" href="/Register/Signup">Kayıt ol</a>
                    </p>
                </div>
            </div>

            <!-- Footer Links -->
            <div class="mt-auto pt-10 text-xs text-[#617589] dark:text-gray-500 flex gap-6">
                <a class="hover:text-primary transition-colors" href="#">Destek</a>
                <a class="hover:text-primary transition-colors" href="#">Gizlilik Şartları</a>
            </div>
        </div>
    </div>

    <!-- Theme Toggle -->
    <button class="fixed bottom-6 right-6 size-12 rounded-full bg-white dark:bg-gray-800 shadow-xl border border-gray-100 dark:border-gray-700 flex items-center justify-center text-[#111418] dark:text-white hover:scale-110 transition-transform" onclick="document.documentElement.classList.toggle('dark')">
        <span class="material-symbols-outlined dark:hidden">dark_mode</span>
        <span class="material-symbols-outlined hidden dark:block">light_mode</span>
    </button>
</body>
</html>