@model AkademiQMongoDb.DTOs.ContactDtos.UpdateContactDto
@{
    ViewData["Title"] = "İletişim Bilgisi Güncelle";
}

<div class="bg-white dark:bg-[#1f2b1b] rounded-2xl p-6 shadow-sm border border-gray-100 dark:border-[#2e4328] max-w-2xl mx-auto">
    <div class="mb-6 border-b border-gray-100 dark:border-[#2e4328] pb-4">
        <h3 class="text-lg font-bold text-slate-800 dark:text-white">İletişim Bilgisi Güncelle</h3>
    </div>

    <form method="post">
        <input type="hidden" asp-for="Id" />
        <div class="space-y-4">
            <div>
                <label class="block text-sm font-medium text-slate-700 dark:text-gray-300 mb-1">Adres</label>
                <input type="text" asp-for="Address" class="w-full rounded-xl border-gray-200 dark:border-[#2e4328] bg-gray-50 dark:bg-[#162013] text-sm focus:ring-primary focus:border-primary dark:text-white" />
            </div>

            <div>
                <label class="block text-sm font-medium text-slate-700 dark:text-gray-300 mb-1">Telefon</label>
                <input type="text" asp-for="PhoneNumber" class="w-full rounded-xl border-gray-200 dark:border-[#2e4328] bg-gray-50 dark:bg-[#162013] text-sm focus:ring-primary focus:border-primary dark:text-white" />
            </div>

            <div>
                <label class="block text-sm font-medium text-slate-700 dark:text-gray-300 mb-1">Email</label>
                <input type="email" asp-for="Email" class="w-full rounded-xl border-gray-200 dark:border-[#2e4328] bg-gray-50 dark:bg-[#162013] text-sm focus:ring-primary focus:border-primary dark:text-white" />
            </div>

            <div>
                <label class="block text-sm font-medium text-slate-700 dark:text-gray-300 mb-1">Harita URL (Embed)</label>
                <input type="text" asp-for="MapUrl" class="w-full rounded-xl border-gray-200 dark:border-[#2e4328] bg-gray-50 dark:bg-[#162013] text-sm focus:ring-primary focus:border-primary dark:text-white" />
            </div>

            <div class="pt-4 flex justify-end gap-3">
                <a href="/Admin/Contact/Index" class="px-4 py-2 rounded-xl bg-gray-100 dark:bg-[#2e4328] text-gray-600 dark:text-gray-300 text-sm font-medium hover:bg-gray-200 dark:hover:bg-[#3d5635] transition-colors">İptal</a>
                <button type="submit" class="px-4 py-2 rounded-xl bg-primary text-white text-sm font-medium hover:bg-green-600 transition-colors shadow-lg shadow-primary/30">Güncelle</button>
            </div>
        </div>
    </form>
</div>
