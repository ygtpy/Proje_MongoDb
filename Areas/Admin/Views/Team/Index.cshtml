@model List<AkademiQMongoDb.DTOs.TeamDtos.ResultTeamDto>
@{
    ViewData["Title"] = "Takım Arkadaşlarımız";
}

<div class="bg-white dark:bg-[#1f2b1b] rounded-2xl p-6 shadow-sm border border-gray-100 dark:border-[#2e4328]">
    <div class="flex items-center justify-between mb-6">
        <div>
            <h3 class="text-lg font-bold text-black font-bold dark:text-white">Takım Arkadaşlarımız</h3>
            <p class="text-sm text-black font-semibold dark:text-gray-400">Takım üyelerini buradan yönetebilirsiniz.</p>
        </div>
        <a href="/Admin/Team/CreateTeam" class="bg-primary text-white hover:bg-green-600 px-4 py-2 rounded-xl text-sm font-medium transition-colors flex items-center gap-2">
            <span class="material-symbols-outlined text-[20px]">add</span>
            Yeni Ekle
        </a>
    </div>

    <div class="overflow-x-auto">
        <table class="w-full">
            <thead>
                <tr class="text-left text-xs font-semibold text-black font-semibold uppercase tracking-wider border-b border-gray-100 dark:border-[#2e4328]">
                    <th class="px-4 py-3">Görsel</th>
                    <th class="px-4 py-3">Ad Soyad</th>
                    <th class="px-4 py-3">Ünvan</th>
                    <th class="px-4 py-3 text-right">İşlemler</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-100 dark:divide-[#2e4328]">
                @foreach (var item in Model)
                {
                    <tr class="group hover:bg-gray-50 dark:hover:bg-[#2e4328]/50 transition-colors">
                        <td class="px-4 py-3">
                            <img src="@item.ImageUrl" class="h-12 w-12 rounded-full object-cover border border-gray-100 dark:border-[#2e4328]" alt="" />
                        </td>
                        <td class="px-4 py-3">
                            <span class="font-medium text-black font-bold dark:text-gray-200">@item.FullName</span>
                        </td>
                         <td class="px-4 py-3 font-semibold text-black dark:text-gray-400">
                            @item.Title
                        </td>
                        <td class="px-4 py-3 text-right">
                            <div class="flex items-center justify-end gap-2">
                                <a href="/Admin/Team/DeleteTeam/@item.Id" class="size-8 flex items-center justify-center rounded-lg bg-red-50 text-red-500 hover:bg-red-100 dark:bg-red-900/20 dark:hover:bg-red-900/30 transition-colors">
                                    <span class="material-symbols-outlined text-[18px]">delete</span>
                                </a>
                                <a href="/Admin/Team/UpdateTeam/@item.Id" class="size-8 flex items-center justify-center rounded-lg bg-blue-50 text-blue-500 hover:bg-blue-100 dark:bg-blue-900/20 dark:hover:bg-blue-900/30 transition-colors">
                                    <span class="material-symbols-outlined text-[18px]">edit</span>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
