@model List<AkademiQMongoDb.DTOs.GalleryDtos.ResultGalleryDto>
@{
    ViewData["Title"] = "Galeri Listesi";
}

<div class="bg-white dark:bg-[#1f2b1b] rounded-2xl p-6 shadow-sm border border-gray-100 dark:border-[#2e4328]">
    <div class="flex items-center justify-between mb-6">
        <div>
            <h3 class="text-lg font-bold text-slate-800 dark:text-white">Galeri Listesi</h3>
            <p class="text-sm text-gray-500 dark:text-gray-400">Resim galerisini buradan y√∂netebilirsiniz.</p>
        </div>
        <a href="/Admin/Gallery/CreateGallery" class="bg-primary text-white hover:bg-green-600 px-4 py-2 rounded-xl text-sm font-medium transition-colors flex items-center gap-2">
            <span class="material-symbols-outlined text-[20px]">add</span>
            Yeni Ekle
        </a>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        @foreach (var item in Model)
        {
            <div class="group relative rounded-2xl overflow-hidden shadow-sm hover:shadow-md transition-shadow bg-white dark:bg-[#2e4328]">
                <img src="@item.ImageUrl" alt="" class="w-full h-48 object-cover transition-transform duration-300 group-hover:scale-105" />
                <div class="absolute inset-0 bg-black/40 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center gap-2">
                     <a href="/Admin/Gallery/UpdateGallery/@item.Id" class="size-10 flex items-center justify-center rounded-full bg-white/90 text-blue-600 hover:bg-white transition-colors">
                        <span class="material-symbols-outlined text-[20px]">edit</span>
                    </a>
                    <a href="/Admin/Gallery/DeleteGallery/@item.Id" class="size-10 flex items-center justify-center rounded-full bg-white/90 text-red-600 hover:bg-white transition-colors">
                        <span class="material-symbols-outlined text-[20px]">delete</span>
                    </a>
                </div>
            </div>
        }
    </div>
</div>
