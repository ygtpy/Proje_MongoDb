@model List<AkademiQMongoDb.DTOs.FeatureDtos.ResultFeatureDto>
@{
    ViewData["Title"] = "Öne Çıkanlar Listesi";
}

<div class="bg-white dark:bg-[#1f2b1b] rounded-2xl p-6 shadow-sm border border-gray-100 dark:border-[#2e4328]">
    <div class="flex items-center justify-between mb-6">
        <div>
            <h3 class="text-lg font-bold text-slate-800 dark:text-white">Öne Çıkanlar Listesi</h3>
            <p class="text-sm text-gray-500 dark:text-gray-400">Ana sayfa öne çıkanlar (Feature) alanını buradan yönetebilirsiniz.</p>
        </div>
        <a href="/Admin/Feature/CreateFeature" class="bg-primary text-white hover:bg-green-600 px-4 py-2 rounded-xl text-sm font-medium transition-colors flex items-center gap-2">
            <span class="material-symbols-outlined text-[20px]">add</span>
            Yeni Ekle
        </a>
    </div>

    <div class="overflow-x-auto">
        <table class="w-full">
            <thead>
                <tr class="text-left text-xs font-semibold text-gray-500 uppercase tracking-wider border-b border-gray-100 dark:border-[#2e4328]">
                    <th class="px-4 py-3">Görsel</th>
                    <th class="px-4 py-3">Başlık</th>
                    <th class="px-4 py-3">Alt Başlık</th>
                    <th class="px-4 py-3 text-right">İşlemler</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-100 dark:divide-[#2e4328]">
                @foreach (var item in Model)
                {
                    <tr class="group hover:bg-gray-50 dark:hover:bg-[#2e4328]/50 transition-colors">
                        <td class="px-4 py-3">
                            <img src="@item.ImageUrl" class="h-16 w-16 rounded-lg object-cover bg-gray-100" alt="" />
                        </td>
                        <td class="px-4 py-3">
                            <span class="font-medium text-slate-700 dark:text-gray-200">@item.Title</span>
                        </td>
                         <td class="px-4 py-3 text-slate-600 dark:text-gray-400">
                            @item.SubTitle
                        </td>
                        <td class="px-4 py-3 text-right">
                            <div class="flex items-center justify-end gap-2">
                                <a href="/Admin/Feature/DeleteFeature/@item.Id" class="size-8 flex items-center justify-center rounded-lg bg-red-50 text-red-500 hover:bg-red-100 dark:bg-red-900/20 dark:hover:bg-red-900/30 transition-colors">
                                    <span class="material-symbols-outlined text-[18px]">delete</span>
                                </a>
                                <a href="/Admin/Feature/UpdateFeature/@item.Id" class="size-8 flex items-center justify-center rounded-lg bg-blue-50 text-blue-500 hover:bg-blue-100 dark:bg-blue-900/20 dark:hover:bg-blue-900/30 transition-colors">
                                    <span class="material-symbols-outlined text-[18px]">edit</span>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
