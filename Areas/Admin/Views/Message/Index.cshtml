@model List<AkademiQMongoDb.DTOs.MessageDtos.ResultMessageDto>
@{
    ViewData["Title"] = "Gelen Mesajlar";
}

<div class="bg-white dark:bg-[#1f2b1b] rounded-2xl p-6 shadow-sm border border-gray-100 dark:border-[#2e4328]">
    <div class="flex items-center justify-between mb-6">
        <div>
            <h3 class="text-lg font-bold text-black font-bold dark:text-white">Gelen Mesajlar</h3>
            <p class="text-sm text-black font-semibold dark:text-gray-400">Kullanıcılardan gelen iletişim mesajlarını buradan yönetebilirsiniz.</p>
        </div>
    </div>

    <div class="overflow-x-auto">
        <table class="w-full">
            <thead>
                <tr class="text-left text-xs font-semibold text-black font-semibold uppercase tracking-wider border-b border-gray-100 dark:border-[#2e4328]">
                    <th class="px-4 py-3">Adı Soyadı</th>
                    <th class="px-4 py-3">Email</th>
                    <th class="px-4 py-3">Konu</th>
                    <th class="px-4 py-3">Tarih</th>
                    <th class="px-4 py-3 text-right">İşlemler</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-100 dark:divide-[#2e4328]">
                @foreach (var item in Model)
                {
                    <tr class="group hover:bg-gray-50 dark:hover:bg-[#2e4328]/50 transition-colors">
                        <td class="px-4 py-3">
                            <span class="font-medium text-black font-bold dark:text-gray-200">@item.NameSurname</span>
                        </td>
                        <td class="px-4 py-3 font-semibold text-black dark:text-gray-400">@item.Email</td>
                        <td class="px-4 py-3 font-semibold text-black dark:text-gray-400">@item.Subject</td>
                        <td class="px-4 py-3 font-semibold text-black dark:text-gray-400">@item.SendDate.ToString("dd.MM.yyyy")</td>
                        <td class="px-4 py-3 text-right">
                            <div class="flex items-center justify-end gap-2">
                                <a href="/Admin/Message/DeleteMessage/@item.Id" class="size-8 flex items-center justify-center rounded-lg bg-red-50 text-red-500 hover:bg-red-100 dark:bg-red-900/20 dark:hover:bg-red-900/30 transition-colors" title="Sil">
                                    <span class="material-symbols-outlined text-[18px]">delete</span>
                                </a>
                                <a href="/Admin/Message/DetailMessage/@item.Id" class="size-8 flex items-center justify-center rounded-lg bg-purple-50 text-purple-500 hover:bg-purple-100 dark:bg-purple-900/20 dark:hover:bg-purple-900/30 transition-colors" title="Detay">
                                    <span class="material-symbols-outlined text-[18px]">visibility</span>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
