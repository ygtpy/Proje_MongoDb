@model AkademiQMongoDb.DTOs.MessageDtos.ResultMessageDto
@{
    ViewData["Title"] = "Mesaj Detayı";
}

<div class="bg-white dark:bg-[#1f2b1b] rounded-2xl p-6 shadow-sm border border-gray-100 dark:border-[#2e4328] max-w-2xl mx-auto">
    <div class="mb-6 border-b border-gray-100 dark:border-[#2e4328] pb-4 flex justify-between items-center">
        <h3 class="text-lg font-bold text-slate-800 dark:text-white">Mesaj Detayı</h3>
        <span class="text-sm text-gray-500 dark:text-gray-400">@Model.SendDate.ToString("dd MMMM yyyy HH:mm")</span>
    </div>

    <div class="space-y-6">
        <div class="flex gap-4 p-4 rounded-xl bg-gray-50 dark:bg-[#162013]">
             <div class="flex-shrink-0">
                <div class="size-12 rounded-full bg-primary/10 flex items-center justify-center text-primary font-bold text-xl">
                    @Model.NameSurname?[0]
                </div>
            </div>
            <div>
                <h4 class="font-bold text-slate-800 dark:text-white">@Model.NameSurname</h4>
                <p class="text-sm text-gray-500 dark:text-gray-400">@Model.Email</p>
            </div>
        </div>

        <div>
            <label class="block text-xs font-medium text-gray-500 uppercase tracking-wider mb-2">Konu</label>
            <p class="text-slate-800 dark:text-white font-medium">@Model.Subject</p>
        </div>

        <div>
            <label class="block text-xs font-medium text-gray-500 uppercase tracking-wider mb-2">Mesaj İçeriği</label>
            <div class="p-4 rounded-xl border border-gray-100 dark:border-[#2e4328] bg-gray-50/50 dark:bg-[#162013]/50 text-slate-700 dark:text-gray-300 whitespace-pre-wrap">
                @Model.MessageContent
            </div>
        </div>

        <div class="pt-4 flex justify-end gap-3 border-t border-gray-100 dark:border-[#2e4328]">
            <a href="/Admin/Message/Index" class="px-4 py-2 rounded-xl bg-gray-100 dark:bg-[#2e4328] text-gray-600 dark:text-gray-300 text-sm font-medium hover:bg-gray-200 dark:hover:bg-[#3d5635] transition-colors">Geri Dön</a>
            <a href="mailto:@Model.Email" class="px-4 py-2 rounded-xl bg-primary text-white text-sm font-medium hover:bg-green-600 transition-colors shadow-lg shadow-primary/30 flex items-center gap-2">
                <span class="material-symbols-outlined text-[18px]">reply</span>
                Yanıtla
            </a>
        </div>
    </div>
</div>
