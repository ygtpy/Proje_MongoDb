@model AkademiQMongoDb.DTOs.MailDtos.MailRequestDto

@{
    ViewData["Title"] = "Mail Gönder";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Toplu Mail Gönder</h4>
                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-success">@ViewBag.Message</div>
                    }

                    <form asp-action="SendDiscountEmail" method="post">
                        <div class="form-group">
                            <label>Konu</label>
                            <input type="text" class="form-control" asp-for="Subject" placeholder="Mail Konusu">
                        </div>
                        <div class="form-group">
                            <label>İçerik (HTML destekler)</label>
                            <textarea class="form-control" asp-for="Body" rows="10" placeholder="Mail içeriği..."></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary mr-2">Gönder</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
