@model List<AkademiQMongoDb.DTOs.ProductDtos.ResultProductDto>
@{
    ViewData["Title"] = "Ürün Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="bg-white dark:bg-[#1f2b1b] rounded-2xl p-6 shadow-sm border border-gray-100 dark:border-[#2e4328]">
    <div class="flex items-center justify-between mb-6">
        <div>
            <h3 class="text-lg font-bold text-slate-800 dark:text-white">Ürün Listesi</h3>
            <p class="text-sm text-gray-500 dark:text-gray-400">Tüm ürünleri buradan yönetebilirsiniz.</p>
        </div>
        <a href="/Admin/Product/CreateProduct" class="bg-primary text-white hover:bg-green-600 px-4 py-2 rounded-xl text-sm font-medium transition-colors flex items-center gap-2">
            <span class="material-symbols-outlined text-[20px]">add</span>
            Yeni Ürün Ekle
        </a>
    </div>

    <div class="overflow-x-auto">
        <table class="w-full">
            <thead>
                <tr class="text-left text-xs font-semibold text-gray-500 uppercase tracking-wider border-b border-gray-100 dark:border-[#2e4328]">
                    <th class="px-4 py-3">Ürün Adı</th>
                    <th class="px-4 py-3">Fiyat</th>
                    <th class="px-4 py-3">Kategori</th>
                    <th class="px-4 py-3 text-right">İşlemler</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-100 dark:divide-[#2e4328]">
                @foreach (var item in Model)
                {
                    <tr class="group hover:bg-gray-50 dark:hover:bg-[#2e4328]/50 transition-colors">
                        <td class="px-4 py-3">
                            <div class="flex items-center gap-3">
                                <img src="@item.ImageUrl" class="size-10 rounded-lg object-cover bg-gray-100" alt="" />
                                <span class="font-medium text-slate-700 dark:text-gray-200">@item.Name</span>
                            </div>
                        </td>
                        <td class="px-4 py-3 text-slate-600 dark:text-gray-400">@item.Price.ToString("C")</td>
                        <td class="px-4 py-3">
                            <span class="px-2 py-1 rounded-lg text-xs font-medium bg-blue-50 text-blue-600 dark:bg-blue-900/30 dark:text-blue-400">
                                @item.CategoryName
                            </span>
                        </td>
                        <td class="px-4 py-3 text-right">
                            <div class="flex items-center justify-end gap-2">
                                <a href="/Admin/Product/DeleteProduct/@item.Id" class="size-8 flex items-center justify-center rounded-lg bg-red-50 text-red-500 hover:bg-red-100 dark:bg-red-900/20 dark:hover:bg-red-900/30 transition-colors">
                                    <span class="material-symbols-outlined text-[18px]">delete</span>
                                </a>
                                <a href="/Admin/Product/UpdateProduct/@item.Id" class="size-8 flex items-center justify-center rounded-lg bg-blue-50 text-blue-500 hover:bg-blue-100 dark:bg-blue-900/20 dark:hover:bg-blue-900/30 transition-colors">
                                    <span class="material-symbols-outlined text-[18px]">edit</span>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>