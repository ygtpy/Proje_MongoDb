@model AkademiQMongoDb.DTOs.ProductDtos.UpdateProductDto
@{
    ViewData["Title"] = "Ürün Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="bg-white dark:bg-[#1f2b1b] rounded-2xl p-6 shadow-sm border border-gray-100 dark:border-[#2e4328] max-w-2xl mx-auto">
    <div class="mb-6 border-b border-gray-100 dark:border-[#2e4328] pb-4">
        <h3 class="text-lg font-bold text-black font-bold dark:text-white">Ürünü Güncelle</h3>
        <p class="text-sm text-black font-semibold dark:text-gray-400">Ürün bilgilerini düzenleyin.</p>
    </div>

    <form method="post">
        <input type="hidden" asp-for="Id" />
        <div class="space-y-4">
            <div>
                <label class="block text-sm font-medium text-black font-bold dark:text-gray-300 mb-1">Ürün Adı</label>
                <input type="text" asp-for="Name" class="w-full rounded-xl border-gray-200 dark:border-[#2e4328] bg-gray-50 dark:bg-[#162013] text-sm focus:ring-primary focus:border-primary dark:text-white" />
            </div>

            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label class="block text-sm font-medium text-black font-bold dark:text-gray-300 mb-1">Fiyat</label>
                    <input type="number" step="0.01" asp-for="Price" class="w-full rounded-xl border-gray-200 dark:border-[#2e4328] bg-gray-50 dark:bg-[#162013] text-sm focus:ring-primary focus:border-primary dark:text-white" />
                </div>
                <div>
                     <label class="block text-sm font-medium text-black font-bold dark:text-gray-300 mb-1">Kategori</label>
                     @Html.DropDownListFor(x=>x.CategoryName, (List<SelectListItem>)ViewBag.v, "Kategori Seçiniz", new { @class = "w-full rounded-xl border-gray-200 dark:border-[#2e4328] bg-gray-50 dark:bg-[#162013] text-sm focus:ring-primary focus:border-primary dark:text-white" })
                </div>
            </div>

            <div>
                <label class="block text-sm font-medium text-black font-bold dark:text-gray-300 mb-1">Görsel URL</label>
                <input type="text" asp-for="ImageUrl" class="w-full rounded-xl border-gray-200 dark:border-[#2e4328] bg-gray-50 dark:bg-[#162013] text-sm focus:ring-primary focus:border-primary dark:text-white" />
            </div>

            <div>
                <label class="block text-sm font-medium text-black font-bold dark:text-gray-300 mb-1">Açıklama</label>
                <textarea asp-for="Description" rows="4" class="w-full rounded-xl border-gray-200 dark:border-[#2e4328] bg-gray-50 dark:bg-[#162013] text-sm focus:ring-primary focus:border-primary dark:text-white"></textarea>
            </div>

            <div class="pt-4 flex justify-end gap-3">
                <a href="/Admin/Product/Index" class="px-4 py-2 rounded-xl bg-gray-100 dark:bg-[#2e4328] text-gray-600 dark:text-gray-300 text-sm font-medium hover:bg-gray-200 dark:hover:bg-[#3d5635] transition-colors">İptal</a>
                <button type="submit" class="px-4 py-2 rounded-xl bg-primary text-white text-sm font-medium hover:bg-green-600 transition-colors shadow-lg shadow-primary/30">Güncelle</button>
            </div>
        </div>
    </form>
</div>